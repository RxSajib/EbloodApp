<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginLandingActivity">

    <ImageView
        android:id="@+id/WelcomeIconID"
        android:src="@drawable/welcomeicon"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="300dp">
    </ImageView>

    <TextView
        android:id="@+id/WelcomeTextID"
        android:layout_below="@+id/WelcomeIconID"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome"
        android:textSize="30dp"
        android:typeface="serif"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/LongTextID"
        android:layout_below="@+id/WelcomeTextID"
        android:layout_marginTop="10dp"
        android:text="App allows to take pictures of your receipts\nand save the receipt information"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:textSize="14dp"
        android:layout_height="wrap_content">

    </TextView>



    <RelativeLayout
        android:layout_below="@id/LongTextID"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/LoginButtonIDID"
            android:background="@drawable/facebook_buttondesign"
            android:layout_width="120dp"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            android:elevation="2dp"
            android:textSize="16sp"
            android:layout_marginRight="7dp"
            android:textColor="@android:color/white"
            android:text="Login"
            android:layout_height="wrap_content">
        </Button>

        <Button
            android:id="@+id/SigUpButtonID"
            android:layout_toRightOf="@+id/LoginButtonIDID"
            android:background="@drawable/sigin_button_design"
            android:layout_width="120dp"
            android:layout_marginLeft="7dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:elevation="2dp"
            android:layout_margin="5dp"
            android:textColor="#7E8082"
            android:text="Sign Up"
            android:layout_height="wrap_content">
        </Button>

    </RelativeLayout>


    <TextView
        android:layout_above="@+id/Bellow"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:text="Or Via social media"
        android:textSize="14sp"
        android:textColor="#5A5A5A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <RelativeLayout
        android:id="@+id/Bellow"
        android:padding="7dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/FaceBookButtonID"
            android:background="@drawable/facebook_shape"
            android:layout_width="40dp"
            android:gravity="center"
            android:layout_marginRight="7dp"
            android:layout_height="40dp">

            <ImageView
                android:src="@drawable/facebooklogo"
                android:layout_width="20dp"
                android:layout_height="20dp">

            </ImageView>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/GoogleButtonID"
            android:layout_toRightOf="@+id/FaceBookButtonID"
            android:background="@drawable/google_shape"
            android:layout_width="40dp"
            android:layout_marginRight="7dp"
            android:gravity="center"
            android:layout_height="40dp">

            <ImageView
                android:src="@drawable/googlewhitw"
                android:layout_width="20dp"
                android:layout_height="20dp">

            </ImageView>

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
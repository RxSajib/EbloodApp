<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragement.DonerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <SearchView
        android:id="@+id/SearchID"
        android:queryHint="Search by username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </SearchView>


    <RelativeLayout
        android:layout_below="@+id/SearchID"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/DonorLayoutID"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/DonorIgame"
                android:layout_centerHorizontal="true"
                android:layout_width="70dp"
                android:src="@drawable/application_icon"
                android:layout_height="70dp">
            </ImageView>
            <TextView
                android:id="@+id/DonorText"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="No Donor Found"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/DonorIgame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </RelativeLayout>




    </RelativeLayout>






    <RelativeLayout
        android:layout_below="@+id/SearchID"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/DonarViewID"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>
    </RelativeLayout>
</FrameLayout>